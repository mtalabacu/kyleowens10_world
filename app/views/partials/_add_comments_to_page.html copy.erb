<div id="comments">
<% for comment in @comments %>
  <div class="comment">
    <%= comment.content %><br>	
		by <strong><%= mail_to comment.email, comment.name, :encode => "javascript" %></strong>
	  <em>on <%= comment.created_at.strftime('%b %d, %Y at %H:%M') %></em>
  </div>
<% end %>
</div>

<p class="supertiny">&nbsp;</p>
<h3>Add a Comment</h3>

<%= form_for [@commentable, Comment.new], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Comment</legend>

    <div class="control-group">
      <%= f.label :content, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :content, :class => 'text_area', :rows => 4 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', comments_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
